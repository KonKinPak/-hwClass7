%h1 Listing users

%table#myTable.table-striped.display{:style => "width:100%"}
  %thead
    %tr
      %th user_id
      %th Email
      %th Name
      %th 
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.email
        %td= user.name
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user) 
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

%br

